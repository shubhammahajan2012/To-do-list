<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="icon" type="image/svg+xml" href="favicon.png" />
  <title>To do list</title>
</head>

<body>

  <div class="box" id="heading">
    <h1> <%= kindOfDay %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(element){ %>

    <form action="/delete" method="post">

    <div class="item">
      <input name= "checkbox" type="checkbox" value= "<%= element._id %>" onChange="this.form.submit()">
      <p><%= (element.name) %></p>
      </div>
      <input type="hidden" name="listName" value="<%= kindOfDay %>"></input>
    </form>

      <% }); %>



    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item">
      <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
    </form>

  </div>



